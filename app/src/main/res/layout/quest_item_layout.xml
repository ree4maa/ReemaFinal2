<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_sport_gradient2">

    <!-- العنوان الكبير -->
    <TextView
        android:id="@+id/TV_titleGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="GAME MISSION"
        android:textColor="#340D3A"
        android:textSize="32sp"
        android:textStyle="bold" />

    <!-- الكرت الرئيسي -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mainCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TV_titleGame"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <!-- صورة -->
            <ImageView
                android:id="@+id/gameImage"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/bg_sport_gradient_foreground" />

            <!-- نوع المهمة -->
            <TextView
                android:id="@+id/TV_taskType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/speed_challenge"
                android:textColor="#3B5DC5"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- بلوك النقاط والوقت -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TV_score"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="@string/score"
                        android:textColor="#999999"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/TV_time"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:text="@string/time2"
                        android:textColor="#999999"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!-- ID اللعبة -->
            <TextView
                android:id="@+id/TV_gameId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:text="@string/game_id_1024"
                android:textColor="#555555" />

            <!-- زر رئيسي -->
            <Button
                android:id="@+id/btnStart"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#212466"
                android:text="@string/start_game"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>